<h1>Добавить новый курс</h1>

<form action="/add" method="POST">
    <div class="input-field ">
        <input id="title" type="text" name="title" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field ">
        <input id="price" type="number" name="price" class="validate" required min="1">
        <label for="price">Стоимость курса</label>
        <span class="helper-text" data-error="Введите стоимость"></span>
    </div>

    <div class="input-field ">
        <input id="img" type="text" name="img" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите url картинки"></span>
    </div>

    <button class="btn-primary">Добавить курс</button>
</form>